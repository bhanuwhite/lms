{
  "kind": "collectionType",
  "collectionName": "communities",
  "info": {
    "singularName": "community",
    "pluralName": "communities",
    "displayName": "Community Forum",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "community_name": {
      "type": "string",
      "required": true
    },
    "user_id": {
      "type": "biginteger",
      "required": true
    },
    "community_id": {
      "type": "biginteger",
      "required": true
    },
    "description": {
      "type": "text",
      "required": false,
      "default": "Description"
    },
    "likes": {
      "type": "biginteger",
      "default": "0"
    },
    "replies": {
      "type": "biginteger",
      "default": "0"
    },
    "community_profile_media": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "question": {
      "type": "richtext"
    },
    "answer_media": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "all_answers": {
      "type": "json"
    }
  }
}
